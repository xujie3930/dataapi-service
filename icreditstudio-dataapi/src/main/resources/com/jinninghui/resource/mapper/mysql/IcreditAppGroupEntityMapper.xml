<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jinninghui.datasphere.icreditstudio.dataapi.mapper.IcreditAppGroupMapper">

    <select id="hasExistAppGroupId"
            resultType="java.lang.Boolean">
        select 1
        from icredit_app_group
        <where>
            <if test="appGroupId != null and appGroupId != '' ">
                AND app_group_id = #{appGroupId}
            </if>
        </where>
        limit 1
    </select>

    <select id="getList"
            resultType="com.jinninghui.datasphere.icreditstudio.dataapi.entity.IcreditAppGroupEntity">
        select *
        from icredit_app_group
        <where>
            <if test="param.name != null and param.name != '' ">
                and name like concat ('%', #{param.name}, '%')
            </if>
        </where>
        order by create_time desc
    </select>

    <select id="hasExit"
            resultType="java.lang.Boolean">
        select 1
        from icredit_app_group
        <where>
            <if test="name != null and name != '' ">
                AND name = #{name}
            </if>
            <if test="id != null and id != '' ">
                AND id != #{id}
            </if>
            AND del_flag = 0
        </where>
        limit 1
    </select>
</mapper>
